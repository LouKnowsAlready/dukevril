<%= link_to "Back to User", users_path %>
<h1>Academies</h1>

<table class="table-condensed table-striped">
  <thead>
    <tr>
      <th>Academy name</th>
      <th>Academy instructor</th>
      <th>Academy country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @academies.each do |academy| %>
      <tr>
        <td><%= academy.academy_name %></td>
        <td><%= academy.academy_instructor %></td>
        <td><%= academy.academy_country %></td>
        <td><%= link_to 'Show', academy %></td>
        <td><%= link_to 'Edit', edit_academy_path(academy) %></td>
        <td><%= link_to 'Destroy', academy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Academy', new_academy_path %>
